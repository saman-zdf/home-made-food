<div class="container-fluid">
  <div class="row my-5 justify-content-between">
    <div class="col">
      <ul class="list-group">
        <li class="list-group-item">Name: <%= @food_item.name %></li>
        <li class="list-group-item">Description: <%= @food_item.description %></li>
        <li class="list-group-item">Availability: <%= @food_item.availability %></li>
          <li class="list-group-item">Food type: <%= @food_item.food_type %></li>
        <li class="list-group-item">Price: <%= number_to_currency(@food_item.price) %></li>
        <li class="list-group-item">Seller: <%= @food_item.profile.username %></li>
    </div>
    <div class="col">
    <% if @food_item.images.attached? %>
      <%= image_tag @food_item.images.first, class: "show-image" %>
    <% end %>
    </div>
  </div>
</div>
<%# if the current user and current_user profile the same as currernt user profile id == @food_item seller id , current user will have a acees to the edit button %>
<% if current_user && current_user.profile && (current_user.profile.id == @food_item.seller.id) %>
  <%= link_to 'Edit', edit_food_item_path(@food_item), class: "btn btn-primary my-2" %> 
  <%= link_to 'Back', food_items_path, class: "btn btn-primary my-2"%>
<% end %>
<% if current_user && current_user.profile && (current_user.profile.id == current_user.id) %>
  <div class="mt-3">
    <%= button_to "Add to Cart", line_items_path(food_item_id: @food_item), class: "btn btn-primary" %>
  </div>
  <%= link_to "Comment", new_review_path(food_item_id: @food_item), class: "btn btn-outline-info mt-3" %>
<% end %>
<%# showing the reviews only if the review food_item_id matches the food_item.id %>
<% @reviews.each do |review|%>
  <p><%= review.comment if review.food_item_id == @food_item.id %></p>
<% end %>

