<div class="container">
  <h1>Profiles</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Username</th>
        <th>Street number</th>
        <th>Street name</th>
        <th>Suburb</th>
        <th>Postcode</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.first_name %></td>
          <td><%= profile.last_name %></td>
          <td><%= profile.username %></td>
          <td><%= profile.street_number %></td>
          <td><%= profile.street_name %></td>
          <td><%= profile.suburb %></td>
          <td><%= profile.postcode %></td>
          <td><%= profile.state %></td>
          <td><%= link_to 'Show', profile, class: "btn btn-success" %></td>
          <% if current_user && current_user.profile && (profile.id == current_user.profile.id ) %>
            <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', profile, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>


