

<section class="p-5">
  <div class="container">
    <div class="container register-form">
      <div class="form">
          <div class="note">
              <h2 class="text-dark pt-3">Profile</h2>
          </div>

          <div class="form-content">
              <div class="row">
          <% if user_signed_in?  %>
              <%= simple_form_for(@profile) do |f| %>
                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                  <div class="col-md-6">
                      <div class="form-group my-1">
                          <%= f.input :first_name, class: "form-control" %>
                      </div>
                      <div :="form-group my-1"><%= f.input :last_name, class: "form-control" %></div>
                      <div class="form-group my-1"><%= f.input :username, class: "form-control" %></div>
                      <div class="form-group my-1"><%= f.input :street_number, class: "form-control" %></div>
                  </div>
                  <div class="col-md-6">
                      <div class="form-group my-1"><%= f.input :street_name, class: "form-control" %></div>
                      <div class="form-group my-1"><%= f.input :suburb, class: "form-control" %></div>
                      <div class="form-group my-1"><%= f.input :postcode, class: "form-control" %></div>
                      <div class="form-group my-1"> <%= f.select :state, state: [ "NSW", "Victoria", "Queensland", "SA", "WA", "Tasmania", "NT"], class: "form-control" %></div>
                      <div class="form-group my-1"><%= f.file_field :image, accept: "image/png, image/jpg, image/jpeg" %> </div>
                  </div>
              </div>
                
                <%= f.hidden_field :user_type, value: @user_type %>
                <%= f.button :submit, class: "btn btn-warning my-3" %>
          </div>
      <% end %>
    <% end %>
      </div>
    </div>
  </div>
</section>
