
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %>
    <%= f.input :street_number %>
    <%= f.input :street_name %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.select :state, state: [ "NSW", "Victoria", "Queensland", "SA", "WA", "Tasmania", "NT"] %>
    <%= f.file_field :image, accept: "image/png, image/jpg, image/jpeg" %>
    <%= f.hidden_field :user_type, value: @user_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary my-3" %>
  </div>
<% end %>
