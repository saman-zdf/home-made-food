<section class="p-5">
  <div class="container">
  <div class="container register-form">
    <div class="form">
      <div class="note">
          <h2 class="text-dark pt-3">Sign In</h2>
      </div>

      <div class="form-content">
        <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-md-6">
            <div class="form-group my-2">
                <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: 'form-control' %>
            </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: 'form-control' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%# passing the user_type as a hidden field and give a value of @user_type which comming from  %>
            <%= f.hidden_field :user_type, value: @user_type %>
          </div>
          </div>
        <%= f.button :submit, "Log in", class: "btn btn-warning mb-2" %>
      </div>
        <%= render "devise/shared/links" %>
    <% end %>
      </div>
    </div>
  </div>
  </div>
</section>
