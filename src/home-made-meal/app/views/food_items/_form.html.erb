<% if current_user && current_user.profile  %>
  <%= simple_form_for(@food_item) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :availability %>
      <%= f.select :food_type, collection: [ "Carnivore", "Vegeterian", "Vegan"] %>
      <%= f.input :price %>
      <%= f.file_field :images, accept: "image/png, image/jpg, image/jpeg", multiple: true, class: "my-1"  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-success my-3"  %>
    </div>
  <% end %>
<% end %>

