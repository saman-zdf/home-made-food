
<%= simple_form_for(@food_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :availability %>
    <%= f.select :food_type, FoodItem.types.keys %>
    <%= f.input :price %>
    <%# added the file field for uploadinf an image, it accepts three different format and we can upload more than on image %>
    <%= f.file_field :images, accept: "image/png, image/jpg, image/jpeg", multiple: true  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
